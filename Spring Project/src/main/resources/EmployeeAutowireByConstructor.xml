<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="employee"
		class="com.spring.ioc.beanfactory.autowiring.byconstructor.Employee"
		autowire="constructor">
		<constructor-arg index="0" value="4949" />
		<constructor-arg index="1" value="Sravan" />

	</bean>
	<bean id="address"
		class="com.spring.ioc.beanfactory.autowiring.byconstructor.Address">
		<constructor-arg index="0" value="Hyderabad" />
		<constructor-arg index="1" value="Andhra Pradesh" />
	</bean>
</beans>